@model IEnumerable<MemberForSessionViewModel>

@if (TempData["SuccessMessage"] is not null)
{
    <div id="Alert" class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] is not null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<header class="bg-primary text-white rounded-3 p-4 shadow-sm mt-5 mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 fw-semibold">Session Members</h2>
            <p class="mb-0 text-light opacity-75">Members That Already Book Session</p>
        </div>
        <div class="text-end">
            <a asp-action="Create"
               asp-route-id="@ViewContext.RouteData.Values["id"]"
               class="btn btn-light">
                <i class="fas fa-plus me-1"></i> New Booking
            </a>
        </div>
    </div>
</header>

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model is not null && Model.Any())
        {
            <table class="table table-striped table-hover align-middle text-center">
                <thead>
                    <tr>
                        <th>Member</th>
                        <th>Booking Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@member.MemberName</td>
                            <td>@member.BookingDate</td>
                            <td>
                                <div class="d-flex justify-content-center gap-1">
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger px-3"
                                            data-bs-toggle="modal"
                                            data-bs-target="#cancelModal"
                                            data-memberid="@member.MemberId"
                                            data-sessionid="@member.SessionId"
                                            data-membername="@member.MemberName">
                                        <i class="fas fa-times me-1"></i> Cancel
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-person-workspace display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Bookings Available</h4>
                <p class="text-muted">Add your first booking to get started</p>
            </div>
        }
    </div>

    <a asp-action="Index" class="btn btn-fill">Back to List</a>
</div>

<!-- ================= Confirmation Modal ================= -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-body text-center p-5">
                <p class="fs-4 text-primary-color mb-4">
                    Are you sure you want to cancel booking for
                    <strong id="memberNameText"></strong>?
                </p>

                <div class="alert alert-warning text-start">
                    <strong>Warning!</strong>
                    This action cannot be undone.
                </div>

                <form asp-action="Cancel" method="post" class="mt-4">
                    <input type="hidden" name="MemberId" id="cancelMemberId" />
                    <input type="hidden" name="SessionId" id="cancelSessionId" />

                    <div class="d-flex justify-content-between gap-3">
                        <button type="button"
                                class="btn-outline flex-fill"
                                data-bs-dismiss="modal">
                            NO
                        </button>

                        <button type="submit"
                                class="btn-fill flex-fill">
                            Yes
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script>
    // Fade alerts
    document.addEventListener("DOMContentLoaded", function () {
        const alertBox = document.getElementById("Alert");
        if (alertBox) {
            setTimeout(() => {
                alertBox.style.transition = "opacity 0.5s ease";
                alertBox.style.opacity = "0";
                setTimeout(() => alertBox.remove(), 500);
            }, 1500);
        }
    });

    // Dynamic confirmation modal
    const cancelModal = document.getElementById('cancelModal');
    cancelModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;

        const memberId = button.getAttribute('data-memberid');
        const sessionId = button.getAttribute('data-sessionid');
        const memberName = button.getAttribute('data-membername');

        document.getElementById('cancelMemberId').value = memberId;
        document.getElementById('cancelSessionId').value = sessionId;
        document.getElementById('memberNameText').textContent = memberName;
    });
</script>
