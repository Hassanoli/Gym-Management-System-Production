@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    #region Head
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied - Fitness Gym</title>

    <style>
        /* ================= Global Reset ================= */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        /* ================= Layout ================= */
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 40px;
        }

        .access-denied-wrapper {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            align-items: center;
            background: white;
            padding: 60px;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        }

        /* ================= Content ================= */
        .content {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        .error-icon {
            font-size: 64px;
            color: #ff4757;
        }

        h1 {
            font-size: 48px;
            font-weight: bold;
        }

        .error-highlight {
            color: #0033cc;
        }

        .error-message {
            font-size: 16px;
            color: #666;
        }

        .error-code {
            background-color: #f0f0f0;
            padding: 12px 16px;
            border-radius: 6px;
            font-family: 'Courier New', monospace;
        }

        /* ================= Buttons ================= */
        .button-group {
            margin-top: 20px;
        }

        .btn {
            padding: 12px 28px;
            border-radius: 6px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background-color: #0033cc;
            color: white;
        }

        /* ================= Image ================= */
        .image-section {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .lock-icon {
            font-size: 120px;
        }
    </style>
    #endregion
</head>

<body>
    #region Body
    <div class="container">
        <div class="access-denied-wrapper">

            <!-- Left Content -->
            <div class="content">
                <div class="error-icon">🚫</div>

                <h1>
                    Access <span class="error-highlight">Denied</span>
                </h1>

                <p class="error-message">
                    We're sorry, but you don't have permission to access this resource.
                </p>

                <div class="error-code">
                    Error Code: 403 - Forbidden Access
                </div>

                <p class="error-message">
                    Please contact the system administrator if you believe this is an error.
                </p>

                <div class="button-group">
                    <a asp-action="Index"
                       asp-controller="Home"
                       class="btn btn-primary">
                        Return to Home
                    </a>
                </div>
            </div>

            <!-- Right Image -->
            <div class="image-section">
                <div class="lock-icon">🔒</div>
            </div>

        </div>
    </div>
    #endregion
</body>
</html>
