@model GymManagementBLL.ViewModels.TrainerViewModels.TrainerViewModel
@{
    ViewData["Title"] = $"Trainer Details - {Model.Name}"; 
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            @* Adjusted column width slightly *@
            <div class="card shadow-lg border-0 overflow-hidden">
                @* Added overflow hidden *@

                <div class="card-header bg-primary-color text-white text-center py-4">
                    @* Adjusted padding *@
                    <i class="bi bi-person-badge display-4 mb-2"></i> @* Reduced margin *@
                    <h2 class="mb-1 h4">@Model.Name</h2> @* Adjusted heading size *@
                    <span class="badge bg-light text-primary-color mt-1">@Model.Specialties Trainer</span> @* Use Model data *@
                </div>

                <div class="card-body p-4">
                    <div class="trainer-details">
                        @* Changed class name for clarity *@

                        <div class="detail-item mb-3">
                            @* Consistent margin *@
                            <div class="d-flex align-items-center">
                                <div class="icon-box me-3">
                                    <i class="bi bi-envelope text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted small">Email</h6> @* Used small class *@
                                    <p class="mb-0 fw-semibold">@Model.Email</p> @* Used fw-semibold *@
                                </div>
                            </div>
                        </div>
                        <hr class="my-3"> @* Added horizontal rule separator *@

                        <div class="detail-item mb-3">
                            <div class="d-flex align-items-center">
                                <div class="icon-box me-3">
                                    <i class="bi bi-telephone text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted small">Phone</h6>
                                    <p class="mb-0 fw-semibold">@Model.Phone</p>
                                </div>
                            </div>
                        </div>
                        <hr class="my-3">

                        <div class="detail-item mb-3">
                            <div class="d-flex align-items-center">
                                <div class="icon-box me-3">
                                    <i class="bi bi-calendar-date text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted small">Date Of Birth</h6>
                                    <p class="mb-0 fw-semibold">@Model.DateOfBirth</p> @* Assumes DateOfBirth is formatted string in ViewModel *@
                                </div>
                            </div>
                        </div>
                        <hr class="my-3">

                        <div class="detail-item mb-3">
                            <div class="d-flex align-items-center">
                                <div class="icon-box me-3">
                                    @* Choose appropriate gender icon based on Model.Gender *@
                                    @if (Model.Gender?.ToLower() == "female")
                                    {
                                        <i class="bi bi-gender-female text-primary-color fs-4"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-gender-male text-primary-color fs-4"></i>
                                    }
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted small">Gender</h6>
                                    <p class="mb-0 fw-semibold">@Model.Gender</p>
                                </div>
                            </div>
                        </div>
                        <hr class="my-3">

                        <div class="detail-item mb-3">
                            <div class="d-flex align-items-center">
                                <div class="icon-box me-3">
                                    <i class="bi bi-geo-alt text-primary-color fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted small">Address</h6>
                                    <p class="mb-0 fw-semibold">@Model.Address</p> @* Assumes Address is formatted string in ViewModel *@
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="card-footer bg-light p-3">
                    @* Added card footer for button *@
                    <div class="d-flex justify-content-end gap-2">
                        @* Align button right *@
                        <a asp-action="Index" asp-controller="Trainer" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                        @* Optional: Add Edit button link here later *@
                        <a asp-action="Edit" asp-controller="Trainer" asp-route-id="@Model.Id" class="btn btn-primary">
                             <i class="bi bi-pencil me-1"></i> Edit
                         </a> 
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@* No specific scripts needed for this view unless you add interactive elements *@